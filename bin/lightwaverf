#!/usr/bin/ruby
require 'lightwaverf'
case ARGV[0]
  when 'help'
    puts LightWaveRF.new.help
  when 'sequence'
    puts LightWaveRF.new.sequence ARGV[1], ARGV[2]
  when 'energy'
    puts LightWaveRF.new.energy ARGV[1], ARGV[2]
  when 'timer'
    puts LightWaveRF.new.timer ARGV[1], ARGV[2]
  else
    LightWaveRF.new.send ARGV[0], ARGV[1], ARGV[2], ARGV[4]
end
